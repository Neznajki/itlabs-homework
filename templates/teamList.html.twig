{% extends 'base.html.twig' %}
{% block body %}
    <form action="{{ path('team_add', {'name' : '$name', 'strength' : '$strength'}) }}">

        <table class="table">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">name</th>
                <th scope="col">strength</th>
            </tr>
            </thead>

            {% for team in list %}
                <tr>
                    <td scope="col">{{ team.id }}</td>
                    <td>{{ team.name }}</td>
                    <td>{{ team.strength }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td>
                    <button id="addTeam" type="button" class="btn btn-success">Add Team</button>
                </td>
                <td>
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <label for="name" class="input-group-text" id="inputGroup-sizing-sm">name</label>
                        </div>
                        <input type="text" id="name" name="name" class="form-control" aria-label="Small"
                               aria-describedby="inputGroup-sizing-sm">
                    </div>
                </td>
                <td>
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <label for="strength" class="input-group-text" id="inputGroup-sizing-sm">strength</label>
                        </div>
                        <input id="strength" type="number" name="strength" id="name" name="name" class="form-control"
                               aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                    </div>
                </td>
            </tr>
        </table>
    </form>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/team.js') }}"></script>
{% endblock %}
{% extends "base.html.twig" %}
{% block body %}
    <a href="{{ path('team_list') }}">team list</a><br>
    <a href="{{ path('challenge_create') }}">create challenge</a><br>

    <table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">name</th>
        <th scope="col">created</th>
    </tr>
    </thead>
        {% for challenge in challenges %}
                <tr class="">
                    <td><a href="{{ path('challenge_display', {'challengeId': challenge.id}) }}">{{ challenge.id }}</a></td>
                    <td><a href="{{ path('challenge_display', {'challengeId': challenge.id}) }}">{{ challenge.name }}</a></td>
                    <td>{{ challenge.created.format('Y-m-d H:i:s') }}</td>
                </tr>
        {% endfor %}
    </table>
{% endblock %}
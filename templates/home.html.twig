{% extends "base.html.twig" %}
{% block body %}
    <a href="{{ path('team_list') }}">team list</a><br>
    <a href="{{ path('challenge_create') }}">create challenge</a><br>

    <table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">name</th>
        <th scope="col">created</th>
    </tr>
    </thead>
        {% for challenge in challenges %}
            <a href="{{ path('challenge_display', {'challengeId': challenge.id}) }}">
                <tr>
                    <td>{{ challenge.id }}</td>
                    <td>{{ challenge.name }}</td>
                    <td>{{ challenge.created }}</td>
                </tr>
            </a>
        {% endfor %}
    </table>
{% endblock %}